{
    "name": "ismail-khlif/miniprojet-devops",
    "description": "Site Notes ESIGELEC - Mini Projet DevSecOps",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ismail KHLIF",
            "email": "ismail.khlif@esigelec.fr"
        },
        {
            "name": "Islem BARGUI",
            "email": "islem.bargui@esigelec.fr"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test-coverage": "phpunit --coverage-text",
        "lint": "find . -name '*.php' -not -path './vendor/*' -print0 | xargs -0 -n1 php -l"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
